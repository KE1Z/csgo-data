<div class="panel panel-default js-match-wrapper">
    <div class="panel-body live-match-panel-body js-streams-wrapper">
        <button type="button" class="close js-close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <div class="row teams-row">
            {{#each teams}}
            <div class="col-xs-6 col-sm-6 col-md-6 text-center">
                {{#if country}}
                    <img src="resources/flags/{{country}}.svg" class="country-flag">
                {{else}}
                    {{#ifCond name '==' '???'}}
                        <img src="resources/design/images/unknown-team.png">
                    {{else}}
                        <img src="logos/{{identifier}}/500">
                    {{/ifCond}}
                {{/if}}
                <h2>
                    <span class="teamname-wrapper">
                        {{name}}
                    </span>
                </h2>
            </div>
            {{/each}}
        </div>
    </div>
</div>
